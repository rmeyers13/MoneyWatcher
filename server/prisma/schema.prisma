generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Transaction {
  id          Int      @id @default(autoincrement())
  date        DateTime
  description String
  amount      Float
  category    String?
  notes       String?
  createdAt   DateTime @default(now())
}